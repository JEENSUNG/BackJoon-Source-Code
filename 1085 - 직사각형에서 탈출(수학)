import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        int x = scan.nextInt();
        int y = scan.nextInt();
        int m = scan.nextInt();
        int n = scan.nextInt();
        
        int t = Math.min(x, m-x);
        int p = Math.min(y, n-y);
        System.out.println(Math.min(t,p));
        
    }
}
